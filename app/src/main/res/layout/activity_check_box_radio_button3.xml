<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".checkBoxRadioButton3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Apple Gadgets: "

            android:textStyle="bold"
            android:textSize="20sp"

            />

        <CheckBox
            android:id="@+id/iPhone15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 15" />

        <CheckBox
            android:id="@+id/iPhone14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 14" />

        <CheckBox
            android:id="@+id/iPhone13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 13" />

        <CheckBox
            android:id="@+id/iPhone12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 12" />

    </LinearLayout>

    <TextView
        android:id="@+id/empty_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textAllCaps="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Color of your iphone: "
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Gold"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Black"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="White"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="White"/>

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Quantity: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <Button
            android:id="@+id/decrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginHorizontal="15dp"
            />
        <Button
            android:id="@+id/increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Submit Button"
            android:layout_marginRight="20dp"
            />

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Rate us"
            />
    </LinearLayout>




</LinearLayout>
